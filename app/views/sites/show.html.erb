<div class="site">

<p id="notice"><%= notice %></p>

<h1><%= @site.address %></h1>

<dl class="left col">
  <dt>SHLAA ref</dt>
  <dd><%= @site.shlaa_ref %></dd>

  <dt>Area HA</dt>
  <dd><%= @site.area_ha %></dd>

  <dt>Capacity</dt>
  <dd><%= @site.capacity %></dd>
</dl>

<dl class="right col">
  <dt>IO / RAG</dt>
  <dd><%= @site.io_rag %></dd>

  <dt>Settlement hierarchy</dt>
  <dd><%= @site.settlement_hierarchy %></dd>

  <dt>Greenfield / brownfield</dt>
  <dd>
    <%= green_brown_glyphs(@site) %>
    <%= @site.green_brown %>
  </dd>
</dl>

<div class="reason">
  <label>Reason</label>
  <p><%= @site.reason %></p>
</div>

<% if @site.scores.any? %>
  <%= render 'scores' %>
<% end %>

</div>

<%= link_to 'Back', sites_path %>
