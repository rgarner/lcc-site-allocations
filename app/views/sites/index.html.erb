<p id="notice"><%= notice %></p>

<%= render 'filter_panel' %>

<h2><%= @sites.count %> sites</h2>

<table class="sites table table-striped">
  <thead>
    <tr>
      <th class="shlaa-ref"><span class="hidden-xs">SHLAA ref</span></th>
      <th>Address</th>
      <th class="<%= "hidden-xs" unless not_showing_scores? %>">Area (ha)</th>
      <th>Capacity</th>
      <th class="hidden-xs hidden-sm">IO / RAG</th>
      <th class="hidden-xs hidden-sm">Settlement hierarchy</th>
      <th class="hidden-xs hidden-sm">Reason</th>
      <% unless not_showing_scores? %>
        <th class="site-total-score col-lg-1 col-md-1 col-sm-1">Score</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr class="site">
        <td class="shlaa-ref">
          <span class="shlaa-ref-content">
            <%= green_brown_glyphs(site) %>
            <%= link_to site.shlaa_ref, site %>
           </span>
        </td>
        <td><%= link_to site.address, site %></td>
        <td class="<%= "hidden-xs" unless not_showing_scores? %>"><%= site.area_ha %></td>
        <td><%= site.capacity %></td>
        <td class="hidden-xs hidden-sm"><%= site.io_rag %></td>
        <td class="hidden-xs hidden-sm"><%= site.settlement_hierarchy %></td>
        <td class="hidden-xs hidden-sm"><%= site.reason %></td>
        <% unless not_showing_scores? %>
          <td class="site-total-score col-lg-1 col-md-1 col-sm-1 <%= total_css_class(site.total_score) %>"><%= site.total_score %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
